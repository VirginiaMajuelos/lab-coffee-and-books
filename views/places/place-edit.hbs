<h1>Editar places</h1>

<form action="/places/place-edit/{{id}}" method="POST">
    <label for="title">
        Name:
        <input name="name" id="name" type="text">
    </label>
    </br>

    <label for="type">
        Type:
    
        <select name="type">
    
            <option value="coffee shop">coffee shop</option>
    
            <option value="bookstore">bookstore</option>
    
        </select><br><br>

    <label>Address</label>
    <input type="text" name="latitude" value="{{location.coordinates.[0]}}"><br>
    <input type="text" name="longitude" value="{{location.coordinates.[1]}}">

    <button class="btn btn-primary" type="submit">Editar libro</button>
</form>
